<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <TextView
        android:id="@+id/mail"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:textStyle="bold"
        android:textSize="18sp"/>


    <EditText
        android:id="@+id/edit_userMail"
        android:layout_below="@+id/mail"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:textSize="18sp"
        android:hint="user mail" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numéro d'identification"
        android:layout_below="@+id/edit_userMail"
        android:layout_marginTop="9dp"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/edit_idul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/number"
        android:layout_marginTop="8dp"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:hint="numéro d'identification"
        android:inputType="number"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="@color/colorred"
        android:layout_below="@+id/edit_idul"
        android:layout_marginLeft="333dp"
        android:layout_marginTop="9dp"
        android:textSize="18sp"/>

</RelativeLayout>